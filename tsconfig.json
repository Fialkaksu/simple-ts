{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["dom", "ES2021"],
    "module": "es2020",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    // "strict": true,
    "target": "es2019",
    "sourceMap": true,
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["./node_modules", "**/*.spec.ts"]
}
